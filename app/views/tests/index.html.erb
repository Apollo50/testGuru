<h2 class="text"> <%= t('.tests_header') %></h2>

<table class="table table-striped table-dark text-center mt-3">
  <thead>
    <tr>
      <th class="sort-by-title pointer ">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: "text-success" %>
        <%= octicon 'arrow-down', class: "text-success hide" %>
      </th>
      <th><%= t('.test_id') %></th>
      <th><%= t('.level') %></th>
      <th><%= t('.question_count') %></th>
      <th><%= t('.action') %></th>
    </tr>
  </thead>

  <%= render @tests %>
</table>

