<h1> <%= t('.header') %> </h1>

<p>
  <% if @passage_test.success? %>
    <p class="win">
      <b><%= t('.win') %></b>
       <%= t('.result', result: @passage_test.result) %>
    </p>
  <% else %>
    <p class="fail">
      <b><%= t('.fail') %></b>
      <%= t('.result', result: @passage_test.result) %>
    </p>
  <% end %>
</p>

<%= link_to t('.back'), tests_path  %>
