<%= form_with model: [:admin, @question, @answer],local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, id: :answer_body, rows: 5, cols: 50 %>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to t('.back_to_question'), admin_question_path(@answer.question) %>
