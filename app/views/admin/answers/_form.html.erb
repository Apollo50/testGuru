<%= form_with model: [:admin, @question, @answer],local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, id: :answer_body, rows: 5, cols: 50 %>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <p>
    <%= form.submit class: 'btn btn-warning' %>
  </p>
<% end %>

<p><%= link_to t('.back_to_question'), admin_question_path(@answer.question), class: 'btn btn-primary' %></p>
