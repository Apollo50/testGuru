<%= form_with model: [:admin, @category, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>
  <p>
    <%= form.label :title  %><br>
    <%= form.text_field :title %>
  </p><br>

  <p>
    <%= form.label :level  %><br>
    <%= form.number_field :level %>
  </p><br>

  <p>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p><%= form.submit 'Create', class: 'btn btn-warning' %></p>

  <p><%= link_to 'Back to test', admin_tests_path, class: 'btn btn-primary' %></p>

<% end %>